<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_screen"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.example.prottm.admin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="Admin"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/agenerate"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_back"
        android:fontFamily="serif"
        android:text="Generate Time Table" />
    <Button
        android:id="@+id/viewTimeTable"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back"
        android:fontFamily="serif"
        android:text="VIEW TIME TABLE" />

    <Button
        android:id="@+id/anotifi"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back"
        android:fontFamily="serif"
        android:text="Send Notifiction" />

    <Button
        android:id="@+id/anotifiView"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back"
        android:fontFamily="serif"
        android:text="View Notifiction" />

    <Button
        android:id="@+id/amanage"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back"
        android:fontFamily="serif"
        android:onClick="mtt"
        android:text="Faculty Detail" />

    <Button
        android:id="@+id/aregi"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back"
        android:fontFamily="serif"
        android:onClick="regi"
        android:text="Registration" />

    <Button
        android:id="@+id/aadd"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back"
        android:fontFamily="serif"
        android:onClick="addfaculty"
        android:text="ADD FACULTY" />

</LinearLayout>
